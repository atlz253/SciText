<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SciText</title>
  </head>
  <body>
    <header>
      <form action="paper" method="post" enctype="multipart/form-data">
        <label><b>Upload and parse PDF:</b>
          <input type="file" name="pdf" /></label>
        <input type="submit" value="Send" />
      </form>
      <form action="" method="get">
        <label><b>Search:</b>
          <input type="text" name="q" value="{{searchQuery}}" /></label>
        <input type="submit" value="Search" />
      </form>
    </header>
    <main>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          {{#each papers}}
            <tr>
              <td>{{this.id}}</td>
              <td><a href="/paper/{{this.id}}">{{this.title}}</a></td>
              <td>{{localeTime this.createdAt}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </main>
  </body>
</html>